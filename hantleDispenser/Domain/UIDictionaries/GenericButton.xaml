<UserControl x:Class="hantleDispenser.UserControls.GenericButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:hantleDispenser.UserControls"
             mc:Ignorable="d" >
    <Border  d:Width="800" d:Height="150" Cursor="Hand"  CornerRadius="30" Background="{Binding ButtonBackground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:GenericButton}}}" Width="{Binding ButtonWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:GenericButton}}}" Height="{Binding ButtonHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:GenericButton}}}">
        <TextBlock d:FontSize="35"  Text="{Binding ButtonText, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:GenericButton}}}" VerticalAlignment="Center" HorizontalAlignment="Center"  FontSize="{DynamicResource CommonFontSize }" FontWeight="SemiBold" Foreground="{StaticResource LIGTHCOLOR}"/>
    </Border>
</UserControl>
